    </form> -->
  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      margin-right: 2rem;
      margin-top: 2rem;
      opacity: 0.7;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
    }

    a {
      color: black;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 3.25rem;
      padding: 1rem;
      margin-left: 5rem;
      display: flex;
      align-items: center;
    }
  </style>
  <div id="filters">
    <a href="/listings?category=Trending" class="filter text-decoration-none">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </a>
    <a href="/listings?category=Rooms" class="filter text-decoration-none">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </a>
    <a href="/listings?category=Iconic Cities" class="filter text-decoration-none">
      <div><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic Cities</p>
    </a>
    <a href="/listings?category=Mountains" class="filter text-decoration-none">
      <div><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </a>
    <a href="/listings?category=Castles" class="filter text-decoration-none">
      <div><i class="fa-solid fa-house"></i></div>
      <p>Castles</p>
    </a>
    <a href="/listings?category=Amazing Pools" class="filter text-decoration-none">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Amazing Pools</p>
    </a>
    <a href="/listings?category=Camping" class="filter text-decoration-none ">
      <div><i class="fa-solid fa-campground"></i></div>
      <p>Camping</p>
    </a>
    <a href="/listings?category=Farms" class="filter text-decoration-none">
      <div><i class="fa-solid fa-tractor"></i></div>
      <p>Farms</p>
    </a>
    <a href="/listings?category=Arctic" class="filter text-decoration-none">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </a>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>

  <% if (listings.length===0) { %>
    <div class="text-center mt-5">
      <h4>No listings found for
        <% if (category) { %> category "<%= category %>" <% } %>
              <% if (search) { %> with search "<%= search %>" <% } %>
      </h4>
    </div>
    <% } else { %>
      <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for (let list of listings) { %>
          <!-- Your listing card HTML -->
            <a href="/listings/<%= list._id %> " class="listing-link">
              <div class="card col listing-card">
                <img src="<%=list.image.url%>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b>
                      <%= list.title %> <br>
                    </b>
                    <%= list.price.toLocaleString("en-IN") %> /night
                      <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                  </p>
                </div>
              </div>
            </a>
          <% } %>
      </div>
      <% } %>

