<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h3>Edit your Listing</h3>


            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation"
                enctype="multipart/form-data">

                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                    <div class="valid-feedback">Title looks good!</div>

                </div>

                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>

                    <textarea name="listing[description]" value="<%= listing.description %>" class="form-control"
                        required><%= listing.description %> </textarea>
                    <div class="invalid-feedback">Please enter a short description</div>

                </div>

                <div class="mb-3">
                    Orginal Listing Image <br>
                    <img src="<%= originalImageUrl %>" alt="">
                </div>

                <div class="mb-3">
                    <lable for="image" class="form-label">Upload New Image</lable>
                    <input name="listing[image]" type="file" class="form-control">
                    <!-- <div class="invalid-feedback">Please enter a valid image url</div> -->
                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <lable for="price" class="form-label">Price</lable>
                        <input name="listing[price]" value="<%= listing.price %>" type="number" class="form-control"
                            required>
                        <div class="invalid-feedback">Please a valid price</div>


                    </div>

                    <div class="mb-3 col-md-8">
                        <lable for="country" class="form-label">Country</lable>

                        <input name="listing[country]" value="<%= listing.country %>" type="text" class="form-control"
                            required>
                        <div class="invalid-feedback">Please enter a valid country </div>


                    </div>
                </div>

                <div class="mb-3">
                    <lable for="location" class="form-label">Location</lable>
                    <input name="listing[location]" value="<%=listing.location%>" type="text" class="form-control"
                        required>
                    <div class="invalid-feedback">Please enter a valid location</div>
                </div>
                <div class="mb-3">
                    <label for="category" class="form-label">Category</label>
                    <select name="listing[category]" id="category" class="form-select" required>
                        <option selected disabled value="">Choose a category</option>
                        <option value="Trending">Trending</option>
                        <option value="Rooms">Rooms</option>
                        <option value="Iconic Cities">Iconic Cities</option>
                        <option value="Mountains">Mountains</option>
                        <option value="Castles">Castles</option>
                        <option value="Amazing Pools">Amazing Pools</option>
                        <option value="Camping">Camping</option>
                        <option value="Farms">Farms</option>
                        <option value="Arctic">Arctic</option>
                    </select>
                    <div class="invalid-feedback">Please select a category.</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Edit</button>

            </form>

        </div>
    </div>

    